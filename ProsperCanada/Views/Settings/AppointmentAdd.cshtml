@model ProsperCanada.Models.ModelMix
@{
    ViewBag.Title = "AppointmentAdd";
}

<h2>AppointmentAdd</h2>
<script>

    window.onmousedown = function (e) {
        var el = e.target;
        if (el.tagName.toLowerCase() == 'option' && el.parentNode.hasAttribute('multiple')) {
            e.preventDefault();

            // toggle selection
            if (el.hasAttribute('selected')) el.removeAttribute('selected');
            else el.setAttribute('selected', '');

            // hack to correct buggy behavior
            var select = el.parentNode.cloneNode(true);
            el.parentNode.parentNode.replaceChild(select, el.parentNode);
        }
    }

</script>
<style>

    /* Style the select box */
    .custom-select {
        width: 50%; /* Set the width to 100% or a specific value */
        background-color: #f5f5f5; /* Background color */
        border: 1px solid #ccc; /* Border color */
        border-radius: 4px; /* Border radius */
        padding: 10px; /* Padding */
    }

        /* Style the dropdown menu */
        .custom-select:focus {
            border-color: #007bff; /* Border color on focus */
            outline: 0; /* Remove the blue outline */
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Add a subtle box shadow on focus */
        }

        /* Style the selected options */
        .custom-select option {
            background-color: #f5f5f5; /* Background color of options */
            color: #333; /* Text color of options */
        }

            /* Style the selected options on hover */
            .custom-select option:hover {
                background-color: #007bff; /* Background color on hover */
                color: #fff; /* Text color on hover */
            }
</style>

@using (Html.BeginForm("AppointmentAdd", "Settings", FormMethod.Post))
{
    <div class="form-group ">
        <label for="inputCode" class="col-sm-2 col-form-label">Code</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="inputCode" name="inputCode" placeholder="Code">
        </div>
    </div>
    <div class="form-group ">
        <label for="inputDay" class="col-sm-2 col-form-label">Day</label>
        <div class="col-sm-10">
            <select size="7" multiple name="myDay" id="myDay" class="custom-select">
             
                <option >Sunday</option>
                <option >Monday</option>
                <option >Tuesday</option>
                <option >Wednesday</option>
                <option >Thursday</option>
                <option >Friday</option>
                <option >Saturday</option>
            </select>
        </div>
    </div>
    <div class="form-group ">
        <label for="inputDateStart" class="col-sm-2 col-form-label">Date Start</label>
        <div class="col-sm-2">
            <input type="date" class="form-control" id="inputDateStart" name="inputDateStart" placeholder="Date start">
        </div>
        <label for="inputDateStart" class="col-sm-2 col-form-label">Date End</label>
        <div class="col-sm-2">
            <input type="date" class="form-control" id="inputDateEnd" name="inputDateEnd" placeholder="Date End">
        </div>
    </div>

    <div class="form-group ">
        <label for="inputDateStart" class="col-sm-2 col-form-label">Time Start</label>

        <div class="col-sm-2">
            <input type="time" class="form-control" id="inputTimeStart" name="inputTimeStart" placeholder="Time Start">
        </div>
        <label for="inputDateStart" class="col-sm-2 col-form-label">Time End</label>

        <div class="col-sm-2">
            <input type="time" class="form-control" id="inputTimeEnd" name="inputTimeEnd" placeholder="Time End">
        </div>

    </div>
    <div class="form-group ">
        <label for="inputCapacity" class="col-sm-2 col-form-label">Capacity</label>
        <div class="col-sm-2">

            <input type="number" id="inputCapacity" name="inputCapacity" min="1" max="100" class="form-control">
        </div>
    </div>
    <div class="form-group ">
        <label for="inputTaxYear" class="col-sm-2 col-form-label">Tax Year</label>
        <div class="col-sm-10">
            <select size="7" multiple name="myTaxYear" id="myTaxYear" class="custom-select">
                @foreach (var item in Model.ClinicTaxYears)
                {
                    <option value="@item.clinicTaxYear">@item.clinicTaxYear</option>
                }
            </select>

        </div>
    </div>
    <div class="form-group ">
        <label for="inputTaxYear" class="col-sm-2 col-form-label">Language</label>
        <div class="col-sm-10">
            <select size="7" multiple name="myLanguage" id="myLanguage" class="custom-select">
                @foreach (var item in Model.ClinicLanguages)
                {
                    <option value="@item.clinicLanguage">@item.clinicLanguage</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group ">
        <label for="inputMeetingTypes" class="col-sm-2 col-form-label">Meeting Types</label>
        <div class="col-sm-10">
            <select size="7" multiple name="myMeetingTypes" id="myMeetingTypes" class="custom-select">
                @foreach (var item in Model.ClinicMeetingTypes)
                {
                    <option value="@item.clinicMeetingType">@item.clinicMeetingType</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group ">
        <label for="inputFamilyTypes" class="col-sm-2 col-form-label">Family Types</label>
        <div class="col-sm-10">
            <select size="7" multiple name="myFamilyTypes" id="myFamilyTypes" class="custom-select">
                @foreach (var item in Model.clinicFamilyTypes)
                {
                    <option value="@item.clinicFamilyType">@item.clinicFamilyType</option>
                }
            </select>
        </div>
    </div>

    <br />
    <div class="form-group ">
        <input type="text" class="form-control" id="inputClinicId" name="inputClinicId" placeholder="Clinic Id" value="@ViewBag.Id">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}
