
@{
    ViewBag.Title = "FamilyTypeEdit";
}

<h2>FamilyTypeEdit</h2>

@ViewBag.Id

@using (Html.BeginForm("FamilyTypeEdit", "Settings", FormMethod.Post))
{

    foreach (var item in Model.SettingsList)
    {
        <div class="form-group ">
            <label for="inputMeetingType" class="col-sm-2 col-form-label">Tax Year</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputMeetingType" name="inputMeetingType" placeholder="Tax Year" value="@item.settingsName">
            </div>
        </div>
        <div class="form-group ">
            <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <textarea id="inputDescription" name="inputDescription" class="form-control" rows="3">@item.settingsDesc</textarea>
            </div>
        </div>

        <div class="form-group ">
            <label for="selectActive" class="col-sm-2 col-form-label">Active</label>
            <div class="col-sm-10">
                <select id="selectActive" name="selectActive" class="form-control">

                    @if (item.settingsActive == 1)
                    {
                        <option value="0">No</option>
                        <option value="1" selected>Yes</option>
                    }
                    else
                    {
                        <option value="0" selected>No</option>
                        <option value="1">Yes</option>
                    }
                </select>
            </div>
        </div>

        <br />
        <div class="form-group ">
            <input type="hidden" class="form-control" id="inputSettingId" name="inputSettingId" placeholder="Setting Id" value="@ViewBag.Id">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }
}

