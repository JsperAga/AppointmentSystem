
@model ProsperCanada.Models.ModelMix
@{
    ViewBag.Title = "Clinic";
}



<nav class="navbar navbar-expand-sm navbar-toggleable-sm">
    <div class="container">
        <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
         
            <h2 class="nav navbar-nav navbar-left">Clinic List</h2>
         
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Clinic Add", "ClinicAdd", "Settings" , new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </div>
</nav>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Clinic Name</th>
            <th scope="col">Eligibility</th>
            <th scope="col">Instruction</th>
            <th scope="col">Appointment</th>
            <th scope="col">Agent</th>
            <th scope="col">Edit</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ClinicList)
        {
            <tr>
                <th scope="row"> </th>
                <td><a onclick="Booking('@item.clinicId')" id="booking" style="cursor:pointer;padding-left:5px;">@item.clinicName</a></td>
                <td>@Html.ActionLink("View", "ClinicViewEligibility", "Settings", new { area = "", id = item.clinicId }, new { @class = "nav-link" })</td>
                <td>@Html.ActionLink("View", "ClinicViewInstruction", "Settings", new { area = "", id = item.clinicId }, new { @class = "nav-link" })</td>
                <td>@Html.ActionLink("View", "ClinicAppointment", "Settings", new { area = "", id = item.clinicId }, new { @class = "nav-link" })</td>
                <td>@Html.ActionLink("View", "ClinicAgent", "Settings", new { area = "", id = item.clinicId }, new { @class = "nav-link" })</td>
                <td>@Html.ActionLink("Edit", "ClinicEdit", "Settings", new { area = "", id = item.clinicId }, new { @class = "nav-link" })</td>



            </tr>
        }
    </tbody>
</table>
